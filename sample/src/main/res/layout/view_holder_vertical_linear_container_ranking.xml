<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="model"
            type="io.github.naverz.antonio.sample.RankingContainerModel"
            />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <include
            layout="@layout/view_holder_content_ranking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:model="@{model.rankingList.get(0)}"
            />

        <include
            layout="@layout/view_holder_content_ranking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:model="@{model.rankingList.get(1)}"
            />

        <include
            layout="@layout/view_holder_content_ranking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:model="@{model.rankingList.get(2)}"
            />

        <include
            layout="@layout/view_holder_content_ranking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:model="@{model.rankingList.get(3)}"
            />

        <include
            layout="@layout/view_holder_content_ranking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:model="@{model.rankingList.get(4)}"
            />
    </LinearLayout>
</layout>